generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model ExchangeRate {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  currency    String   @unique
  rate        Float
  lastUpdated DateTime @default(now())
}
